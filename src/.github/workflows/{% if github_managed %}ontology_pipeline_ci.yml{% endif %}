name: Ontology Pipeline CI

on:
  schedule:
    - cron: '5 */6 * * *'
  workflow_dispatch:

env:
  BRANCH: main
  OAUTH_CLIENT_ID: ${{ secrets.CMEM_OAUTH_CLIENT_ID }}
  OAUTH_CLIENT_SECRET: ${{ secrets.CMEM_OAUTH_CLIENT_SECRET }}
  CMEMC_ENV_OVERWRITE: True

jobs:
  pipeline:
    runs-on: ubuntu-latest
    steps:
    - uses: arduino/setup-task@v1
      with:
        repo-token: ${{ secrets.GITHUB_TOKEN }}
    - uses: actions/checkout@v4
      with:
        ref: ${{ env.BRANCH }}
    - name: Run CI Tasks ‚öôÔ∏è
      run: task ci
    - name: Upload the resulting artifacts üì°
      uses: actions/upload-artifact@v3
      with:
        name: Pipeline artifacts
        path: artifacts
